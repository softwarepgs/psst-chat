<WelcomeScreen>:
    on_enter:
        root.check_file()
    canvas.before:
        Color:
            rgba: 0.45, 0, 0.55, 0.2
        Rectangle:
            pos: self.pos
            size: self.size

    orientation: "vertical"
    MDGridLayout:
        cols: 1
        padding: 30,60,30,100
        spacing: 10
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        MDCard:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            radius: [20,]
            elevation: 30
            opacity: .9
            MDBoxLayout:
                orientation: "vertical"
                padding: 10,10,10,70
                spacing: 10
                Image:
                    source: "assets/logo.png"
                    pos_hint: {"center_x": 0.5, "center_y": 0.2}
                    size_hint: 0.8,0.8

                MDTextField:
                    id: wsPassword
                    hint_text: "Password"
                    size_hint_x: None
                    width: root.width*0.5
                    font_size: 20
                    pos_hint: {"center_x": 0.5, "center_y": 1}
                    password: True
                    required: True
                    helper_text_mode: "on_error"
                    helper_text: "Enter password"

                MDTextField:
                    id: wsPasswordConfirm
                    hint_text: "Confirm password"
                    size_hint_x: None
                    width: root.width*0.5
                    font_size: 20
                    pos_hint: {"center_x": 0.5, "center_y":0.8}
                    password: True
                    required: False
                    helper_text_mode: "on_error"
                    helper_text: "Enter password"
                    opacity: 0
                    disabled: True

                MDFillRoundFlatButton:
                    pos_hint:{"center_x": 0.5,"center_y": 0.1}
                    width: root.width*0.5
                    text: "Confirm"
                    on_release:
                        root.press_ok()

